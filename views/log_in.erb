<form class="inline" id="signin" action="/users/login" method="post">
  <div>
    <label for="username">Username:</label>
    <input name="username" type="text" value="<%= params[:username] %>" required>
  </div>
  <div>
    <label for="password">Password:</label>
    <input name="password" type="password" required>
  </div>
  <div>
    <button type="submit">Sign In</button>
  </div>
</form>

<p class='user-status'><a href='/'>Go back</a></p>
