<% if session[:username] %>
  <h2>Active Polls</h2>

  <ul>
    <% @polls.each do |poll| %>
      <li>
        <a href='/polls/<%= poll.id %>'><%= poll.name %></a>
        Created by <%= poll.creator.name %> on <%= poll.date_created.asctime %>
      </li>
    <% end %>
  </ul>

<% else %>
  <p><a href='/users/create'>Create new user</a></p>
  <p><a href='/users/login'>Log in</a></p>

<% end %>

